        <resource id="versions" path="//">
            <method href="#getVersions-senlin-v1"/>
        </resource>
        <resource id="version" path="//v1">
            <resource id="profile_types" path="profile-types">
                <method href="#listProfileTypes"/>
                <resource id="profile_type" path="{profile_type}">
                    &profile_typeTemplateParameter;
                    <method href="#showProfileType"/>
                </resource>
            </resource>
            <resource id="policy_types" path="policy-types">
                <method href="#listPolicyType"/>
                <resource id="policy_type" path="{policy_type}">
                    &policy_typeTemplateParameter;
                    <method href="#showPolicyType"/>
                </resource>
            </resource>
            <resource id="profiles" path="profiles">
                <method href="#listProfiles"/>
                <method href="#createProfile"/>
                <resource path="{profile_id}" id="profile_id">
                    &profile_idTemplateParameter;
                    <method href="#showProfile"/>
                    <method href="#updateProfile"/>
                    <method href="#deleteProfile"/>
                </resource>
            </resource>
            <resource id="policies" path="policies">
                <method href="#listPolicies"/>
                <method href="#createPolicy"/>
                <resource path="{policy_id}" id="policy_id">
                    &policy_idTemplateParameter;
                    <method href="#showPolicy"/>
                    <method href="#updatePolicy"/>
                    <method href="#deletePolicy"/>
                </resource>
            </resource>
            <resource id="clusters" path="clusters">
                <method href="#listClusters"/>
                <method href="#createCluster"/>
                <resource id="cluster_id" path="{cluster_id}">
                    &cluster_idTemplateParameter;
                    <method href="#showCluster"/>
                    <method href="#updateCluster"/>
                    <method href="#deleteCluster"/>
                    <resource id="cluster_actions" path="actions">
                        <method href="#clusterAction"/>
                    </resource>
                    <resource id="cluster_policies" path="policies">
                        <method href="#listClusterPolicies"/>
                        <resource id="cluster_policy_id" path="{policy_id}">
                            &policy_idTemplateParameter;
                            <method href="#showClusterPolicy"/>
                        </resource>
                    </resource>
               </resource>
            </resource>
            <resource id="nodes" path="nodes">
                <method href="#listNodes"/>
                <method href="#createNode"/>
                <resource id="node_id" path="{node_id}">
                    &node_idTemplateParameter;
                    <method href="#showNode"/>
                    <method href="#updateNode"/>
                    <method href="#deleteNode"/>
                    <resource id="node_actions" path="actions">
                        <method href="#nodeAction"/>
                    </resource>
                </resource>
            </resource>
            <resource id="actions" path="actions">
                <method href="#listActions"/>
                <resource id="action_id" path="{action_id}">
                    &action_idTemplateParameter;
                    <method href="#showAction"/>
                </resource>
            </resource>
            <resource id="receivers" path="receivers">
                <method href="#listReceivers"/>
                <method href="#createReceiver"/>
                <resource id="receiver_res_id" path="{receiver_id}">
                    &receiver_idTemplateParameter;
                    <method href="#showReceiver"/>
                    <method href="#deleteReceiver"/>
                </resource>
            </resource>
            <resource id="webhooks" path="webhooks">
                <resource id="webhook_res_id" path="{webhook_id}">
                    &webhook_idTemplateParameter;
                    <resource id="webhook_trigger" path="trigger">
                        <method href="#triggerWebhook"/>
                    </resource>
                </resource>
            </resource>
            <resource id="events" path="events">
                <method href="#listEvents"/>
                <resource id="event_id" path="{event_id}">
                    &event_idTemplateParameter;
                    <method href="#showEvent"/>
                </resource>
            </resource>
            <resource id="build_info" path="build-info">
                <method href="#showBuild"/>
            </resource>
        </resource>
