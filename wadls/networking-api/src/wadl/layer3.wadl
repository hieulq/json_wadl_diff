                    />
                </wadl:doc>
                &routerObject;
                &statusResponseParameter;
                &external-gateway-infoResponseParameter;
                &availability_zone_hintsResponseParameter;
                &availability_zonesResponseParameter;
                &router-nameResponseParameter;
                &admin-state-upResponseParameter;
