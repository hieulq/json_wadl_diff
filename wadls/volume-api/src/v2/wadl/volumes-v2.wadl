                    </resource>
                </resource>
                <resource id="types" path="types">
                    <method href="#showVolumeTypes"/>
                    <method href="#createVolumeType"/>
                    <resource path="{volume_type_id}"
                        id="volume_type_id">
                        &volume_type_idTemplateParameter;
                        <method href="#updateVolumeType"/>
